{
  "name": "csuite",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "[ -f .env ] || cp .env.example .env && docker compose up -d --wait && npx prisma generate && npx prisma db push && npm run db:seed && next dev",
    "dev:next": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "start:fresh": "npx prisma db push --force-reset && npm run db:seed && next start",
    "railway:start": "npx prisma db push && npm run db:seed && next start -H 0.0.0.0 -p ${PORT:-3000}",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "@tanstack/react-query": "^5.90.21",
    "@trpc/client": "^11.0.0",
    "@trpc/react-query": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "autoprefixer": "^10.4.24",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "lucide-react": "^0.575.0",
    "next": "^14.2.35",
    "next-auth": "^5.0.0-beta.30",
    "pg": "^8.18.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "superjson": "^2.2.6",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.3",
    "prisma": "^7.4.1",
    "tsx": "^4.7.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0"
  }
}
